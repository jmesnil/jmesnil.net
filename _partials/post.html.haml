%article
  %h1.text-center
    - if page.post.link
      %a.link{ :href=>page.post.link }= "#{site.linked_list.link } #{ page.post.title }&nbsp;"
      %a.plink{ :rel=>'bookmark', :title=>"Permanent link to #{ page.post.title }", :href=>page.post.url }= site.linked_list.post
    - else
      %a.post{ :href=> page.post.url }= page.post.title

  .date= page.post.date.strftime('%B %-d, %Y')

  ~ page.post.content.force_encoding("UTF-8")

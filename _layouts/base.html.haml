!!! 5
%html
  %head
    %meta{ :name=>'viewport', :content=>"width=device-width" }
    %meta{ "http-equiv"=>'content-type', :content=>'text/html; charset=utf-8' }
    %meta{ :name=>'author', :content=>site.author.name }

    %title= "#{site.title} &mdash; #{page.title}"

    %link{ :rel=>'start', :href=>'/'}
    %link{ :rel=>'icon', :href=>'/favicon.ico', :type=>'image/png' }

    %link{ :rel=>'alternate', :type=>'application/atom+xml', :href=>'/weblog/feed/atom/', :title=>'Atom feed' }

    %link{ :rel=>'stylesheet', :href=>'http://fonts.googleapis.com/css?family=Cantarell' }
    %link{ :rel=>'stylesheet', :href=>'http://fonts.googleapis.com/css?family=Inconsolata' }

    %link{ :rel=>'stylesheet', :href=>"/stylesheets/bootstrap.css", :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :href=>"/stylesheets/custom.css", :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :href=>"#{ site.assets_url }stylesheets/syntax.css", :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :href=>"#{ site.assets_url }stylesheets/lightbox.css", :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :href=>"#{ site.assets_url }stylesheets/highlight.github.css", :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :href=>"#{ site.assets_url }stylesheets/font-awesome.min.css", :media=>'screen, projection' }

    %script{ :src=>"#{ site.assets_url }scripts/picturefill.min.js", :async=>"true" }
    %script{ :src=>"#{ site.assets_url }scripts/matchmedia.js" }
  %body

    .container
      %header.text-center
        %h1
          %a{:href=>'/', :title=>site.title}= site.title
        %nav
          %ul.list-inline
            %li
              &nbsp;
              %a{ :href=>'/weblog/' } Weblog
            %li
              &nbsp;
              %a{ :href=>'/about/' } About
            %li
              &nbsp;
              %a{ :href=>'/weblog/archive/' } Archive

      .row
        .col-md-10.col-md-offset-1

          ~ content

          %hr
          %footer
            .pull-left
              %a.text-muted{ :href=>'http://creativecommons.org/licenses/by-nc/3.0/' } &copy; 2004&mdash;2013
              %a.text-muted{ :href=>'/about/' }= site.author.name
            .pull-right
              %a.text-muted{ :href=>'/colophon/' } Colophon
            &nbsp;

    %script( async src="#{ site.assets_url }scripts/jquery-1.7.2.min.js" )
    %script( async src="/scripts/bootstrap.js" )
    %script( async src="#{ site.assets_url }scripts/lightbox.js" )
    %script( async src="#{ site.assets_url }scripts/highlight.pack.js" )
    :javascript
      hljs.initHighlightingOnLoad();
    = google_analytics
